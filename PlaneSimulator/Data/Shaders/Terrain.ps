/////////////
// GLOBALS //
/////////////
Texture2D shaderTexture;
SamplerState SampleType;

cbuffer LightBuffer
{
	float4 ambiantColor;
    float4 diffuseColor;
    float3 lightDirection;
	float padding;
};

//////////////
// TYPEDEFS //
//////////////
struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
    float3 normal : NORMAL;
	float fogFactor : FOG;
};

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 TerrainPixelShader(PixelInputType input) : SV_TARGET
{
    float lightIntensity = saturate(dot(input.normal, -lightDirection));
	
    float4 pixelColor = (ambiantColor + (diffuseColor * lightIntensity)) * shaderTexture.Sample(SampleType, input.tex);

	return (pixelColor)*(input.fogFactor) + (1-input.fogFactor)*(float4(0.75,0.75,0.75,1));
}