//////////////////////
////   TYPES
//////////////////////
struct PixelInputType
{
	float4 position : SV_POSITION;
	float4 color : COLOR;
	float fogFactor : FOG;
};

//////////////////////
////   Pixel Shader
/////////////////////
float4 WaterPixelShader(PixelInputType input) : SV_TARGET
{
	return (input.color)*(input.fogFactor) + (1-input.fogFactor)*(float4(0.75,0.75,0.75,1));
}